st.title("æ•°å­—çŒœè°œæ¸¸æˆ")
st.write("çŒœä¸€ä¸ª0åˆ°10ä¹‹é—´çš„æ•°å­—ï¼")

if 'num' not in st.session_state:
    st.session_state.num = random.randint(0, 10)

