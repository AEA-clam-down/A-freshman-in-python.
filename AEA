if st.button("æ£€æŸ¥çŒœæµ‹"):
    if guess > st.session_state.num:
        st.error("çŒœå¤§äº†ï¼")
    elif guess < st.session_state.num:
        st.error("çŒœå°äº†ï¼")
    else:
        st.success("çŒœå¯¹äº†ï¼ğŸ‰")
        if st.button("å†ç©ä¸€æ¬¡"):
